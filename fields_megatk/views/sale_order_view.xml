<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record model="ir.ui.view" id="sale_order_campo_megatk_view_inh">
	  		<field name="name">sale.order.campomegatk.view</field>
	  		<field name="model">sale.order</field>
	  		<field name="inherit_id" ref="sale.view_order_form" />
				<field name="arch" type="xml">
					<xpath expr="//field[@name='user_id']" position="replace"/>
					<field name="partner_id" position="after">
							<field name="user_id" string='Responsable'/>
		            </field>

					<xpath expr="//field[@name='partner_id']" position="after">
						<field name="x_contacto"/>
					</xpath>

					<field name="payment_term_id" position="after">
							<field name="x_valido"/>
		            </field>
					<field name="journal_id" position="after">
							<field name="x_consignacion"/>
		            </field>

					<field name="tag_ids" position="after">
						<field name="sorteo_id"/>
						<field name="x_student" />
		            </field>

				</field>
	   	</record>

	   	<record model="ir.ui.view" id="sale_order_line_campo_megatk_view_inh">
				<field name="name">sale.order.line.campomegatk.view</field>
				<field name="model">sale.order</field>
				<field name="inherit_id" ref="sale.view_order_form"/>
				<field name="arch" type="xml">
					<xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/list[1]/field[@name='product_template_id']" position="after">
				 		<field name="x_user_id"/>
					</xpath>
					<xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/list[1]/field[@name='name']" position="after">
				 		<field name="x_series"/>
					</xpath>
					<xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/list[1]/field[@name='price_total']" position="after">
				 		<field name="tax_editable" optional="show" force_save="1"/>
					</xpath>
					
		  	</field>
		</record>
	</data>	
</odoo>

