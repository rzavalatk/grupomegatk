<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="res_config_settings_form_facebook_chat_view" model="ir.ui.view">
        <field name="name">res.config.settings.form.facebook.chat.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages']" position="after">
                <div data-string="General Settings" data-key="general_settings">
                    <h2>Chat Facebook</h2>
                    <div class="row mt16 o_settings_container" id="chain_bot">
                        <div class="col-12 col-lg-6 o_setting_box" title="Activar el chat de Facebook en el sitio web">
                            <div class="o_setting_left_pane">
                                <field name="chat_facebook_active"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="chat_facebook_active"/>
                                <div class="text-muted" id="chat_facebook_active">
                                    Activar el chat de Facebook en el sitio web
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    </data>
</odoo>