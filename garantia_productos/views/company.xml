<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="garantia_productos_add_logo_garantia" model="ir.ui.view">
            <field name="name">garantia_productos_add_logo_garantia</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page string="Logos Específicos">
                        <group string="Imagen de garantía">
                            <field name="logo_garantia" widget="image" nolabel="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>