<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hours_xtras_wizard_form" model="ir.ui.view">
            <field name="name">hours.xtras.wizard.form</field>
            <field name="model">hours.xtras</field>
            <field name="arch" type="xml">
                <form>
                    <script type="text/javascript" src="/marcacion_y_horas_extras/static/src/js/hours_xtra.js"/>
                    <sheet>
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="employee_ids" nolabel="1" mode="tree,kanban" options="{'no_create': True}">
                                <tree>
                                    <field name="name" />
                                    <field name="company_id" />
                                    <field name="work_email" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Generar excel" id="generate_button" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hours_xtras_wizard_action" model="ir.actions.act_window">
            <field name="name">Gererar horas extra</field>
            <field name="res_model">hours.xtras</field>
            <field name="target">new</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>


        <record id="camaro_cuatrero_wizard_form" model="ir.ui.view">
            <field name="name">camaro.cuatrero.wizard.form</field>
            <field name="model">camaro.cuatrero</field>
            <field name="arch" type="xml">
                <form>
                    <script type="text/javascript" src="/marcacion_y_horas_extras/static/src/js/hours_xtra.js"/>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_init"/>
                                <field name="tipo_reporte"/>
                            </group>
                            <group>
                                <field name="date_end"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Generar excel" id="generate_excel" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
