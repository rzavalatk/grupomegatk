<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Hereda la vista de formulario de res_config_settings para incluir
    los campos alias_prefix y alias_domain-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr
            .leave.request.aliasing
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Ausencias" string="Ausencias" name="hr_leave"
                     data-key="hr_leave_request_aliasing"
                     groups="hr_holidays.group_hr_holidays_manager"
                     logo="/hr_holidays/static/description/icon.png">
                    <block title="Ausencias" id="hr_leaves">
                        <setting string="Alias de Correo para Ausencias"
                                 help="Puede configurar un alias de correo genérico para crear solicitudes de ausencias entrantes fácilmente. Escriba un correo con el formato deseado para crear solicitudes de ausencias en un clic. Formato:- Comience el asunto con 'SOLICITUD DE AUSENCIA'. Después del contenido del correo mencione 'Fecha Desde:' y 'Fecha Hasta:'. ">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="alias_prefix"
                                           string="Prefijo"
                                           class="col-md-3"/>
                                    <field name="alias_prefix"/>
                                </div>
                                <div class="row mt16">
                                    <label for="alias_domain"
                                           string="Dominio"
                                           class="col-md-3"/>
                                    <field name="alias_domain"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
    <!--    Acción de configuración de res_config_settings en hr_holidays-->
    <record id="res_config_settings_action_email_alias"
            model="ir.actions.act_window">
        <field name="name">Configuración de Ausencias</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'hr_leave', 'bin_size': False}</field>
    </record>
    <!--    res_config_settings menu in hr_holidays-->
    <menuitem id="res_config_settings_menu_email_alias"
              name="Settings"
              parent="hr_holidays.menu_hr_holidays_configuration"
              sequence="0"
              action="res_config_settings_action_email_alias"
              groups="base.group_system"/>
</odoo>
