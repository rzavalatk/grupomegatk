<odoo>
  <data>
    <!-- View Total -->
    <record id="custom_cart" model="ir.ui.view">
      <field name="name">cart.custom</field>
      <field name="inherit_id" ref="website_sale.total" />
      <field name="arch" type="xml">
        <xpath expr="//div[@id='cart_total']//tr[@id='order_total_untaxed']//span" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
        <xpath expr="//div[@id='cart_total']//tr[@id='order_total_taxes']//span" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
        <xpath expr="//div[@id='cart_total']//tr[@id='order_total']//td[@class='text-xl-right']//strong" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
      </field>
    </record>


    <!-- View Cart Line -->
    <record id="custom_cart_page" model="ir.ui.view">
      <field name="name">page.cart.custom</field>
      <field name="inherit_id" ref="website_sale.cart_lines" />
      <field name="arch" type="xml">
        <xpath expr="//table[@id='cart_products']//td[@name='price']" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
      </field>
    </record>


    <!-- View Cart Event -->
    <record id="custom_cart_list" model="ir.ui.view">
      <field name="name">list.cart.custom</field>
      <field name="inherit_id" ref="ks_theme_kinetik.ks_cart_popover_inherit_website_event_sale" />
      <field name="arch" type="xml">
        <xpath expr="//table[@id='cart_products']//td[@name='price']" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
      </field>
    </record>


    <!-- View Products item -->
    <record id="custom_products_grid_shop" model="ir.ui.view">
      <field name="name">custom.products.grid.shop</field>
      <field name="inherit_id" ref="ks_theme_kinetik.ks_change_b_tag" />
      <field name="arch" type="xml">
        <xpath expr="//div[@class='ks-price']" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
      </field>
    </record>


    <!-- View Product -->
    <record id="custom_product_details" model="ir.ui.view">
      <field name="name">custom.products.details</field>
      <field name="inherit_id" ref="website_sale.product_price" />
      <field name="arch" type="xml">
        <xpath expr="//div[@itemprop='offers']" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
      </field>
    </record>
    <!-- View Product Summary Cart -->
    <record id="custom_product_summary_cart" model="ir.ui.view">
      <field name="name">custom.product.summary.cart</field>
      <field name="inherit_id" ref="website_sale.cart_summary" />
      <field name="arch" type="xml">
        <xpath expr="//td[@class='text-center td-price']" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
      </field>
    </record>

    <!-- View Price Range -->
    <record id="custom_price_range" model="ir.ui.view">
      <field name="name">custom.price.range</field>
      <field name="inherit_id" ref="ks_theme_kinetik.products_attributes" />
      <field name="arch" type="xml">
        <xpath expr="//div[@class='ks_price_container ']" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
        <xpath expr="//li[@class='nav-item border-top']" position="attributes">
          <attribute name="style">display: none;</attribute>
        </xpath>
      </field>
    </record>
    <!-- View Product Summary Cart 2-->
    <record id="custom_product_summary_cart_2" model="ir.ui.view">
      <field name="name">custom.product.summary.cart.2</field>
      <field name="inherit_id" ref="website_sale_comparison.product_compare" />
      <field name="arch" type="xml">
        <xpath expr="//div[@class='product_summary']/span" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
      </field>
    </record>
    <!-- View poppop compare product -->
    <record id="custom_product_compare_popover" model="ir.ui.view">
      <field name="name">custom.product.compare.popover</field>
      <field name="inherit_id" ref="website_sale_comparison.product_product" />
      <field name="arch" type="xml">
        <xpath expr="//div[@class='ks-price']" position="attributes">
          <attribute name="groups">base.group_portal, base.group_user</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>