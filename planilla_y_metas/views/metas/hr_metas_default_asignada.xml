<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="hr_metas_asignadas_default_form">
            <field name="name">hr.metas.asignadas.default.form</field>
            <field name="model">hr.metas.asignadas.default</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Evaluar" groups="planilla_y_metas.planilla_manager" class="oe_highlight" states="draft,valid" name="%(planilla_y_metas.hr_metas_evaluar_action)d" context="{'active_id': id,'active_model': 'hr.metas.asignadas.default'}" type="action" />
                        <button string="Re-evaluar" groups="sign_orders.group_admins" states="done" name="%(planilla_y_metas.hr_metas_evaluar_action)d" context="{'active_id': id}" type="action" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="meta_id" />                               
                                <field name="point_meta" />
                                <field name="advance" />
                                <field name="remark" />
                            </group>
                            <group>
                                <field name="empleado_id" />
                                <field name="point_assign" />
                            </group>
                        </group>
                        <group>
                            <field name="date_end" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
