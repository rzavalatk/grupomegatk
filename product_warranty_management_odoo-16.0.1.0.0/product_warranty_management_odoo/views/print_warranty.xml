<odoo>
<template id="report_product_warranty_view_new">
        <t t-call="web.html_container">
          <t t-foreach="docs" t-as="doc">
            <t t-set="lang" t-value="doc.partner_id.lang"/>
            <t t-call="product_warranty_management_odoo.report_product_warranty_template" t-lang="lang"/>
          </t>
        </t>
    </template>
    <template id="report_product_warranty_template">
        <t t-call="web.basic_layout"><!-- Recomendado usar este layout ya que está sin formato -->
            <t t-set="o" t-value="docs[0]"/>
            <t t-set="company" t-value="o.company_id"/>
                <main>
                <div class="page">
                <div class="mb-4">
                    <t t-if="company.logo and isinstance(company.logo, bytes) and company.logo != b''">
                        <img t-att-src="'data:image/png;base64,' + (company.logo | base64)"
                             style="max-height: 60px; max-width: 150px;" 
                             alt="Logo"/>
                    </t>
                </div>
                    <div class="text-center">
                        <h2>Certificado de Garantía</h2>
                    </div>
                    
                    <div class="mt32 mb32">
                        <div class="row">
                            <div class="col-6">
                                <strong>Producto:</strong>
                                <span t-field="o.name"/> 
                            </div>
                            <div class="col-6">
                                <strong>Duración de la Garantía:</strong>
                                <span t-field="o.warranty_duration"/> meses 
                            </div>
                        </div>
                        <br/>
                        <div class="col-6">
                            <strong>Fecha de Expiración:</strong>
                            <span t-field="o.warranty_expiry"/> 
                        </div>
                    </div>

                    <div class="mt32 mb32">
                        <h3>Condiciones de la Garantía</h3>
                        <div t-field="o.warranty_condition_compliance.description"/>  
                    </div>
                    
                    <div class="mt64">
                        <p class="text-center">
                            Este certificado de garantía es válido solo con el comprobante de compra original.
                        </p>
                    </div>
                </div>
            </main>
        </t>
    </template>

    <record id="paperformat_warranty" model="report.paperformat">
        <field name="name">Formato Garantía</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>  
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">6</field>
        <field name="margin_right">6</field>
        <field name="header_spacing">5</field>
    </record>

    <record id="action_report_product_warranty" model="ir.actions.report">
        <field name="name">Imprimir Garantía</field>
        <field name="model">product.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">product_warranty_management_odoo.report_product_warranty_template</field>
        <field name="report_file">product_warranty_management_odoo.report_product_warranty_template</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_warranty"/>
    </record>
</odoo>