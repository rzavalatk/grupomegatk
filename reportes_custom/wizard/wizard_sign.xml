<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        

        <!-- OWL Template for signature dialog -->
        <template id="sign_signature_dialog" name="Sign Signature Dialog">
            <div class="o_sign_signature_draw card mt-3">
                <div class="card-header">
                    <a role="button" id="clear_button" class="o_sign_clean float-right btn btn-link" href="#">Borrar firma</a>
                </div>
                <div class="o_sign_signature card-body p-0" id="sign_area"/>
            </div>
            <div id='alert'>
                <div class="alert alert-danger" role="alert">
                    Esperando firma...
                </div>
            </div>
        </template>

        <!-- Form View for the wizard -->
        <record id="sign_documents_sign_wizard" model="ir.ui.view">
            <field name="name">wizard.sign_documents.sign</field>
            <field name="model">sign_documents.sign.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="signature" widget="signature" string="Firma"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Guardar" name="print_report" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_custom_sign_wizard" model="ir.actions.act_window">
            <field name="name">Firmar</field>
            <field name="res_model">sign_documents.sign.wizard</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>
