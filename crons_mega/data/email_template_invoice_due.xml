<odoo>
    <data>
        <record id="mail_template_notification_invoice_due" model="mail.template">
            <field name="name">Notificación de Vencimiento de Factura</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">[ALERTA] Factura próxima a vencer</field>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="email_to">${user.email_formatted | safe}</field>
            <field name="body_html" type="html">
                
                <p>Estimado <t t-out="object.partner_id.name"/>,</p>
                <p>Le recordamos que la factura <t t-out="object.name"/> con fecha de vencimiento <t t-out="object.invoice_date_due"/></p>
                <p>Por favor, asegúrese de realizar el pago antes de la fecha de vencimiento.</p>
                <p>Saludos,</p>
                <p><t t-out="object.company_id.name"/></p>
        
            </field>
        </record>
    </data>
</odoo>
