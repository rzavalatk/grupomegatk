<odoo>
    <data noupdate="1">
        <record id="mail_template_notification_invoice_due" model="mail.template">
            <field name="name">Notificación de Vencimiento de Factura</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">[ALERTA] Factura próxima a vencer: ${object.name}</field>
            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="body_html" type="html">
                <![CDATA[
                <p>Estimado ${object.partner_id.name},</p>
                <p>Le recordamos que la factura ${object.name} con fecha de vencimiento ${object.invoice_date_due} está próxima a vencer.</p>
                <p>Por favor, asegúrese de realizar el pago antes de la fecha de vencimiento.</p>
                <p>Saludos,</p>
                <p>${object.company_id.name}</p>
                ]]>
            </field>
        </record>
    </data>
</odoo>
