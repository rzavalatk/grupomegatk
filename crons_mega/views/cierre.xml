<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="account_cierre_view_tree" model="ir.ui.view">
            <field name="name">account.cierre.view.tree</field>
            <field name="model">account.cierre</field>
            <field name="arch" type="xml">
                <list string="">
                    <field name="date" />
                    <field name="region" />
                    <field name="company_id" />
                    <field name="state" />
                </list>
            </field>
        </record>

        <record id="account_cierre_view_form" model="ir.ui.view">
            <field name="name">account.cierre.view.form</field>
            <field name="model">account.cierre</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="id" invisible="1" />
                        <button string="Iniciar Cierre" modifiers="{'invisible':[('state','!=','draft')]}" name="iniciar_cierre" type="object" class="oe_highlight"/>
                        <button string="Procesar Cierre" modifiers="{'invisible':[('state','!=','init')]}" name="procesar_cierre" type="object" class="oe_highlight"/>
                        <button string="Enviar por Email" modifiers="{'invisible':[('state','!=','proccess')]}" name="%(crons_mega.account_cierre_mail_action)d" type="action" class="oe_highlight" context="{'active_id': id}" />
                        <button string="Enviar por Email" modifiers="{'invisible':[('state','!=','done')]}" name="%(crons_mega.account_cierre_mail_action)d" type="action" context="{'active_id': id}"/>
                        <button string="Volver a borrador" modifiers="{'invisible':[('state','!=','cancel')]}" name="volver_borrador" type="object"/>
                        <button string="Cancelar" confirm="¿Esta seguro que desea cancelar este Cierre?" modifiers="{'invisible':[('state','in',['draft','done'])]}" name="cancel" type="object"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date" modifiers="{'readonly':[('state','!=','draft')]}" />
                                <field name="company_id" modifiers="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="region" modifiers="{'readonly':[('state','!=','draft')]}"/>
                                <field name="currency_id" invisible="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Categorías">
                                <field name="cierre_line_ids" readonly="1" />
                                <group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <div class="oe_inline o_td_label" style="padding-left: 15px;">
                                            <label for="total"/>
                                        </div>
                                        <field name="total" nolabel="1" widget="monetary" />
                                    </group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <div class="oe_inline o_td_label" style="padding-left: 15px;">
                                            <label for="total_cobrado"/>
                                        </div>
                                        <field name="total_cobrado" nolabel="1" widget="monetary" />
                                    </group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <div class="oe_inline o_td_label" style="padding-left: 15px;">
                                            <label for="total_facturado"/>
                                        </div>
                                        <field name="total_facturado" nolabel="1" widget="monetary" />
                                    </group>
                                </group>
                            </page>
                            <page string="Facturas sin pagar">
                                <field name="facturas_ids" nolabel="1">
                                    <list string="Facturas">
                                        <field name="partner_id" string="Cliente" />
                                        <field name="invoice_date" string="Fecha" />
                                        <field name="name" />
                                        <field name="user_id" />
                                        <field name="amount_untaxed_signed" string="Total sin impuesto" sum="Total" />
                                        <field name="amount_tax_signed" string="Impuesto" sum="Total" />
                                        <field name="amount_total_signed" string="Total" sum="Total"/>
                                        <field name="amount_residual" string="Saldo" sum="Total" />
                                        <field name="state" />
                                    </list>
                                </field>
                            </page>
                            <page string="Registros internos">
                                <field name="logs" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_cierre_view_search" model="ir.ui.view">
            <field name="name">account.cierre.view.search</field>
            <field name="model">account.cierre</field>
            <field name="arch" type="xml">
                <search>
                    <field name="date" />
                    <field name="region" />
                    <field name="company_id" />
                </search>
            </field>
        </record>

        <record id="account_cierre_action_2" model="ir.actions.act_window">
            <field name="name">Cierre Diario</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.cierre</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="account_cierre_menu" name="Cierre Diario" action="account_cierre_action_2" parent="account.menu_finance_receivables" sequence="16"/>
    </data>
</odoo>