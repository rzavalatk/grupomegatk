<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_cierre_diario_2" model="mail.template">
            <field name="name">Cierre Diario</field>
            <field name="model_id" ref="model_account_payment"/>
            <field name="subject">Cierre del ${ctx.get('date')} de ${ctx.get('company')} </field>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="email_to">${user.email_formatted | safe}</field>
            <field name="email_cc">${user.email_formatted | safe}</field>
            <field name="body_html" type="html">
                <div class="page">
                    % if  ctx.get('accounts'):
                        <div>
                            % for row in ctx.get('accounts'):
                                    <b>
                                        <span> ${row}: </span>
                                    </b>
                                % for col in ctx.get('accounts')[row]:
                                    <p>
                                        <span style="margin-left: 20px;"> ${col}: </span>
                                        <span> 
                                        % if row == 'Nicaragua' :
                                            $ 
                                        % else :
                                            L. 
                                        % endif
                                            ${ctx.get('accounts')[row][col]} </span>
                                    </p>
                                %endfor
                            %endfor
                        </div>
                    % endif
                </div>
            </field>
        </record>
    </data>
</odoo>