<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record id="action_check_gastos_personal" model="ir.actions.act_window">
		    <field name="name">Cheques a Terceros</field>
		    <field name="res_model">banks.check</field>
		    <field name="view_mode">form</field>
		    <field name="domain">[('doc_type','=','check')]</field>
		    <field name="context">{'default_doc_type':'check', 'default_cheque_liquidacion': 1}</field>
		    <field name="view_id" ref="banks.check_form_view"/>
		    <field name="target">new</field>
		</record>

		<record id="gastos_mega_search_view" model="ir.ui.view">
		  <field name="name">gastos.mega.search.view</field>
		  <field name="model">gastos.megatk</field>
		  <field name="arch" type="xml">
		      <search string="Gastos Search View">
		      	<field string="Solicitante" name='empleado_solicitud'/>
	          <filter string="Aprobado" name='apro_gastos' domain="[('state','=','aprobado')]"/>
	          <filter string="Desembolso" name='des_gastos' domain="[('state','=','desembolso')]"/>
	          <filter string="Liquidado" name='liq_gastos' domain="[('state','=','liquidado')]"/>
	          <filter string="Pendiente" name='pend_gastos' domain="[('state','=','pendiente')]"/>
	          <filter string="Solicitante" name='group_solic_gastos' context="{'group_by':'empleado_solicitud'}"/>
      			<filter string="Estado" name='group_sta_gastos' context="{'group_by':'state'}"/>
		      </search>
		  </field>
		</record>

		<record model="ir.ui.view" id="gastos_megatk_form_view">
			<field name="name">gastos.megatk.form</field>
			<field name="model">gastos.megatk</field>
			<field name="arch" type="xml">
			<form string="Requisicioń de Materiales">
			<header> 
				<button name="solicitar_aprobacion" type="object" string="Solicitar Aprobación" modifiers='{"invisible": ["!=", "draft"]}' class="oe_highlight"/>
				<button name="back_draft" type="object" string="Volver a borrador" modifiers='{"invisible": ["!=", "pendiente", "rechazado"]}' class="oe_highlight"/>
				<button name="aprobar_gastos" type="object" string="Aprobar"  modifiers='{"invisible": ["!=", "pendiente"]}' class="oe_highlight" 
					groups="gastos_megatk.grupo_gastos_personal_aprobar"/>
				<button name="rechazar_gastos" type="object" string="Rechazar" modifiers='{"invisible": ["!=", "pendiente"]}' class="oe_highlight" groups="gastos_megatk.grupo_gastos_personal_rechazar"/>
				<button name="liquidar_gastos" type="object" string="Liquidar Gastos" modifiers='{"invisible": ["!=", "desembolso"]}' class="oe_highlight" groups="gastos_megatk.grupo_gastos_personal_liquidar"/>
				<button name="cancelar_liquidados" type="object" string="Cancelar Liquidación" modifiers='{"invisible": ["!=", "liquidado"]}' class="oe_highlight" groups="gastos_megatk.grupo_gastos_personal_liquidar"/>		
				<button name="%(action_wizard_gastos_megatk_wizard_cheque)d" type="action" string="Desembolso" modifiers='{"invisible": ["!=", "aprobado"]}' class="oe_highlight" groups="gastos_megatk.grupo_gastos_personal_manager"/>
				<!--  -->
				<button name="rechazar_gastos_admin" type="object" string="Rechazar" groups="planilla_y_metas.admin_functions"/>
				<!--  -->
				<field name="state" widget="statusbar" nolabel="1"/>	
			</header>
			<sheet>
			<h2>
				<field name="name" placeholder="Descripción de gasto ..." class="oe_inline" modifiers="{'readonly': [('state','!=','draft')]}"/>
			</h2>
			<group colspan="4">
			<group cols="2">
				<field name="company_id" modifiers="{'readonly': [('state','!=','draft')]}" options="{'no_create': True}"/>
				<!--<field name="empleado_solicitud" options="{'no_create': True}" modifiers="{'readonly': [('state','!=','draft')]}" domain="[('company_id', '=' , company_id), ('es_empleado', '=', True)]"/>-->
				<field name="empleado_solicitud" options="{'no_create': True}" modifiers="{'readonly': [('state','!=','draft')]}" />
				<field name="tipo_gasto" modifiers="{'readonly': [('state','!=','draft')]}"/>
				<field name="total_solicitado"/>
				
			</group>
			<group cols="2">
				<field name="fecha_inicio" modifiers="{'readonly': [('state','!=','draft')]}"/>
				<field name="fecha_final" modifiers="{'readonly': [('state','!=','draft')]}"/>
				<field name="banco_id" options="{'no_create': True}" readonly="1" domain="[('company_id', '=', company_id), ('state', '=', 'validated')]" modifiers='{"invisible": ["|",["state","in",["draft","pendiente","rechazado"]],["banco_debit_id","!=",False]]}'/>
				<field name="banco_debit_id" options="{'no_create': True}" readonly="1" domain='[("company_id", "=", company_id), ("state", "=", "validated")]' modifiers='{"invisible": ["|",["state","in",["draft","pendiente","rechazado"]],["banco_id","!=",False]]}'/>
				<field name="monto_anticipo" modifiers="{'invisible': [('state','in',('draft', 'pendiente', 'rechazado'))], 'readonly': [('state','in',('liquidado', 'desembolso'))]}"/>
				<field name="total_gastos" modifiers="{'invisible': [('state','in',('draft', 'pendiente', 'rechazado'))]}"/>
			</group>
			</group>
			<notebook colspan="4">
			<page string="Detalle de gastos">		
				<field name="detalle_gastos_ids"  >
					<list string="Detalle" editable="bottom">
						<field name="estado_parent" invisible="1"/>
						<field name="gasto_id" modifiers="{'readonly': [('estado_parent','=',True)]}"/>
						<field name="name" modifiers="{'readonly': [('estado_parent','=',True)]}"/>
						<field name="monto" sum="Total" modifiers="{'readonly': [('estado_parent','=',True)]}"/>
						<!--<field name="comprobante"  modifiers="{'readonly': [('estado_parent','=',False)]}"/>-->
						<field name="monto_comprobante" sum="Total" modifiers="{'readonly': [('estado_parent','=',False)]}"/>

					</list>
				</field>
			</page>	
			<page string="Liquidación de gastos">
			<group colspan="4">
				<group cols="2">
					<field name="fecha_aprobacion" modifiers="{'readonly': [('state','!=','draft')],'invisible': [('state','=','draft')]}"/>
					<field name="cuenta_anticipo_id" options="{'no_create': True}" 
						modifiers="{'readonly': [('state','=','liquidado')]}"/>
				</group>
				<group cols="2">
					<field name="total_diferencia" modifiers="{'invisible': [('state','in',('draft', 'pendiente', 'rechazado'))]}"/>
					<stron>
						<p modifiers="{'invisible': [('state','in',('draft', 'pendiente', 'rechazado'))]}">(+) A favor de empleado. (-) Empleado CXC.</p>
					</stron>
				</group>	
			</group>
			<separator string="Liquidación"/>
			<group colspan="4">
				<group cols="2">
					<field name="activar_cuenta_cxc" invisible="1"/>
					<field name="activar_caja" invisible="1"/>
					<field name="activar_cuenta_gasto" invisible="1"/>

					<field name="cuenta_gasto_id" options="{'no_create': True}"   
						modifiers="{'invisible': [('activar_cuenta_gasto','=', False)], 'readonly': [('state','=','liquidado')]}"/>
					<field name="cuenta_cxc_id" options="{'no_create': True}"
						modifiers="{'invisible': [('activar_cuenta_cxc','=', False)], 'readonly': [('state','=','liquidado')]}"/>
					<field name="analytic_id"/>
				</group>
				<group cols="2">
					<field name="fecha_liquidacion" modifiers="{'readonly': [('state', '=', 'liquidado')]}"/>
					<field name="journal_id" modifiers="{'readonly': [('state', '=', 'liquidado')]}" options="{'no_create': True}"/>
					<field name="cuenta_caja_id" options="{'no_create': True}"
						modifiers="{'invisible': [('activar_caja','=', False)], 'readonly': [('state','=','liquidado')]}"/>
					<field name="move_id" options="{'no_create': True}"
						modifiers="{'invisible': [('state','!=', 'liquidado')]}"/>
				</group>	
			</group>
			</page>
			<page string="Cotización">
				<field name="cotizaciones_ids"/>
			</page>
			</notebook>
				<field name="comentarios" placeholder="Comentarios de gastos"/>
		    </sheet>
		     <chatter reload_on_attachment="True"/>
			</form>
			</field>
		</record>
		 <record id="rule_gastos_megatk" model="ir.rule">
		  <field name="name">Gastos Megatk</field>
		  <field name="model_id" ref="model_gastos_megatk"/>
		  <field name="perm_read" eval="True"/>
		  <field name="perm_write" eval="True"/>
		  <field name="perm_create" eval="True"/>
		  <field name="perm_unlink" eval="True"/>
		  <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>

		<record model="ir.ui.view" id="gastos_megatk_tree_view">
		<field name="name">gastos.megatk.tree</field>
		<field name="model">gastos.megatk</field>
		<field name="arch" type="xml">
			<list string="Gastos" decoration-primary="state == 'draft'" decoration-info="state == 'aprobado'"  decoration-warning="state == 'desembolso'" decoration-danger="state == 'rechazado'">
				<field name="company_id" />
				<field name="fecha_inicio" />
				<field name="fecha_final"/>	
				<field name="fecha_aprobacion"/>	
				<field name="empleado_solicitud"/>
				<field name="monto_anticipo"/>
				<field name="state" />
			</list>
		</field> 
		</record>
		   <!--  Accion para Lista de Precios -->
		<record model="ir.actions.act_window" id="gastos_megatk_action">
		<field name="name">Gestión de gastos de personal</field>
		<field name="res_model">gastos.megatk</field>
		<field name="view_mode">list,form</field>
		 <field name="context">{'default_tipo_gasto':'viatico'}</field>
		</record>

		<record model="ir.actions.act_window" id="gastos_megatk_liquidados_action">
		<field name="name">Gestión Liquidados</field>
		<field name="res_model">gastos.megatk</field>
		<field name="view_mode">list,form</field>
		<field name="domain">[('state', '=', 'liquidado')]</field>
		</record>

		<record model="ir.actions.act_window" id="gastos_megatk_rechazado_action">
		<field name="name">Gestión Rechazados</field>
		<field name="res_model">gastos.megatk</field>
		<field name="view_mode">list,form</field>
		<field name="domain">[('state', '=', 'rechazado')]</field>
		</record>
		   <!-- Fin de Action de Contratos -->
		     <!--  Menu Principal de contratos-->

		<menuitem 
			id="menu_principal_gastos" 
			name="Gastos" 
			web_icon="gastos_megatk,static/description/GASTO.png"/>

		<menuitem  
			id="submenu_gastos" 
			name="Gastos de Personal" 
			parent="menu_principal_gastos" 
			sequence="1"/>

		<menuitem  
			id="menu_gestion_gastos" 
			name="Solicitud de gastos" 
			action="gastos_megatk_action" 
			parent="submenu_gastos"  
			sequence="10"/>

		<menuitem  
			id="menu_gestion_gastos_liquidados" 
			name="Gastos liquidados" 
			action="gastos_megatk_liquidados_action" 
			parent="submenu_gastos"  
			sequence="20"/>

		<menuitem  
			id="menu_gestion_gastos_rechazados" 
			name="Gastos rechazados" 
			action="gastos_megatk_rechazado_action" 
			parent="submenu_gastos"  
			sequence="30"/>
	</data>
</odoo>
