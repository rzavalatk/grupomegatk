<!-- views/sorteo_ticket_view.xml -->
<odoo>
    <data>
        <record id="view_sorteo_products_form" model="ir.ui.view">
            <field name="name">sorteo.products.form</field>
            <field name="model">sorteo.products</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group name="datos-1" string="Datos">
                            <field name="product"/>
                            <field name="fecha_inicial"/>
                            <field name="fecha_final"/>
                            
                        </group>
                        
                    </group>
                        
                </form>
            </field>
        </record>

        <record id="sorteo_fechas_view_tree" model="ir.ui.view">
            <field name="name">sorteo_products.view.tree</field>
            <field name="model">sorteo.products</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="product"/>
                    <field name="fecha_inicial"/>
                    <field name="fecha_final"/>
                </tree>
            </field>
        </record>

    

        

       
    </data>
</odoo>